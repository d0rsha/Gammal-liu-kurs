with Ada.Integer_Text_IO;  use Ada.Integer_Text_IO;
with Ada.Text_IO;          use Ada.Text_IO;

procedure Lab_3_B is
   
   type Char_Array_Type is
     array (1..257) of Character;
   
   type String_Type is
      record 
	 Char_Array : Char_Array_Type;
	 Length : Integer;
      end record;
   
   procedure Get_P (P : in out String_Type) is
      I : Integer := P.Char_Array'First;
   begin
      while (not End_Of_Line) loop
	 Get(P.Char_Array(I));
	 I := I + 1;   
      end loop;
      P.Length := I - 1; -- Pga. Char_Array_Type b√∂rjar i position 1..
   end Get_P;
   
   procedure Put_P (P : in String_Type) is
   begin
	 for I in P.Char_Array'First..P.Length loop
	    Put(P.Char_Array(I));
	 end loop;
   end Put_P;
   
   Function Equal (P1 : in String_Type;
		   P2 : in String_Type) return Boolean  is
   begin
      if P1.Length = P2.Length then
	 --! Can't compare empty elements -- 
	 for I in P1.Char_Array'First..P1.Length loop
	    if not(P1.Char_Array(I) = P2.Char_Array(I)) then
	      return FALSE;
	    end if;
	 end loop;
	 return TRUE;
      else 
	 return FALSE;
      end if;
   end Equal;
   
   P1, P2 : String_Type;
   Equals : Boolean;
begin
   
   Get_P(P1);
   Skip_Line;
   
   Put_P(P1);
   New_Line;
   
   Get_P(P2);
   Skip_Line;
   Put_P(P2);
   New_Line;
   
   Equals := Equal(P1,P2);
   
   if Equals then
      Put_Line("Lika!");
   end if;
   
   
end Lab_3_B;

   
